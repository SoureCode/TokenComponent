{
    "name": "sourecode/token-component",
    "description": "Token related interfaces and classes to use for verification or similar intents.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jason Schilling",
            "email": "jason@sourecode.dev"
        }
    ],
    "autoload": {
        "psr-4": {
            "SoureCode\\Component\\Token\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SoureCode\\Component\\Token\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8.0",
        "sourecode/common-component": "^0.1",
        "doctrine/persistence": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "friendsofphp/php-cs-fixer": "^2.18",
        "vimeo/psalm": "^4.4"
    },
    "scripts": {
        "psalm": "vendor/bin/psalm --show-info=false --no-cache --output-format=phpstorm",
        "cs-fix": "vendor/bin/php-cs-fixer fix",
        "cs-check": "vendor/bin/php-cs-fixer fix --diff",
        "test": "vendor/bin/phpunit"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
